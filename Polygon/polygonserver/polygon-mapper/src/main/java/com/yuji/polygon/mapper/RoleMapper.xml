<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yuji.polygon.mapper.LeaveMapper">

    <resultMap id="BaseResultMap" type="com.yuji.polygon.entity.Role">
        <id column="id" property="id"/>
        <result column="name" property="name"/>
        <collection property="permissions" ofType="com.yuji.polygon.entity.Permission" >
            <result column="id" property="id" />
            <result column="name" property="name" />
        </collection>
    </resultMap>


    <insert id="insertRole" parameterType="java.lang.String" useGeneratedKeys="true" keyProperty="id">
        insert into poly_role(name) values (#{name})
    </insert>

    <select id="getRoleByEmployeeId" parameterType="java.lang.String" resultType="BaseResultMap">
       select r.*, p.id,p.name
       from poly_role r, poly_employee_role er, poly_permission p , poly_role_permission rp
       where er.eid = #{eid} and p.id = rp.pid
    </select>



</mapper>